<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
     <record model="ir.actions.server" id="ag_remove_powered_by_odoo">
        <field name="name">Remove Powered By Odoo</field>
        <field name="model_id" ref="mail.model_mail_template"/>
        <field name="binding_model_id" ref="mail.model_mail_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.ag_remove_powered_by_odoo()</field>
    </record>
    <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="attributes">
                    <attribute name="string">Modified Total</attribute>
                    <attribute name="widget">monetary</attribute>
                    <attribute name="options">{'precision': 3}</attribute>
                     
                </xpath>
            </field>
    </record>
    </data>
</odoo>
